<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/paddingTambahan"
    android:paddingLeft="@dimen/paddingTambahan"
    android:paddingRight="@dimen/paddingTambahan"
    android:paddingTop="@dimen/paddingTambahan"
    tools:context="com.example.irwancannady.testtravel.RegisterActivity"
    android:background="@color/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUsernameRegis"
        android:hint="Username"
        android:layout_marginBottom="6dp"
        android:textColorHint="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Password"
        android:layout_marginBottom="6dp"
        android:textColorHint="@color/white"
        android:layout_below="@+id/etUsernameRegis"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginBottom="13dp"
        android:hint="Re-Type password"
        android:textColorHint="@color/white"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:id="@+id/button"
        android:background="@drawable/radius_button_explore"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:textColor="@color/white"
        android:background="@drawable/radius_button"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new account"
        android:textColor="@color/white"
        android:id="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:background="@drawable/fb_connect_button"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/etUsernameRegis"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
